{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "bunx",
        "@upstash/context7-mcp@latest"
      ],
      "enabled": true
    },
    "circleci": {
      "type": "local",
      "command": [
        "bunx",
        "@circleci/mcp-server-circleci"
      ],
      "enabled": true,
      "environment": {
      }
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true
    }
  }
}
