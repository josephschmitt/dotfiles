{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "aws": "deny",
      "git commit": "ask",
      "git push": "ask",
      "git clone": "deny"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
  "agent": {
    "Spec-ify": {
      "description": "Spec-driven development expert that guides users through the complete SDD workflow, orchestrating PM, Architect, Planner, Implementer, and Solver subagents",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./agents/sdd.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "patch": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "task": true
      }
    },
    "PM": {
      "description": "Gathers requirements and creates product requirements documents (PRDs) focused on functional rather than technical needs",
      "mode": "subagent",
      "prompt": "{file:./agents/product-manager.md}",
      "model": "openai/gpt-5",
      "tools": {
        "read": true,
        "write": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "edit": false,
        "bash": false,
        "patch": false
      }
    },
    "Architect": {
      "description": "Designs technical implementation of features based on product requirements documents",
      "mode": "subagent",
      "model": "google/gemini-2.5-pro",
      "prompt": "{file:./agents/architect.md}",
      "tools": {
        "read": true,
        "write": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "edit": false,
        "bash": false,
        "patch": false
      }
    },
    "Planner": {
      "description": "Converts technical specifications from the Architect into detailed implementation plans for the Implementer",
      "mode": "subagent",
      "model": "google/gemini-2.5-pro",
      "prompt": "{file:./agents/planner.md}",
      "tools": {
        "read": true,
        "write": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true,
        "edit": false,
        "bash": false,
        "patch": false
      }
    },
    "Implementer": {
      "description": "Carries out technical implementation based on architect's specifications and designs",
      "mode": "subagent",
      "prompt": "{file:./agents/implementer.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "patch": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true
      }
    },
    "Solver": {
      "description": "Investigates issues and finds creative solutions when things don't work as expected",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./agents/problem-solver.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "patch": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true
      }
    },
    "Code Researcher": {
      "description": "Expert code researcher that analyzes codebases, understands system architecture, and produces detailed reports on technical decisions, historical knowledge, and design patterns",
      "mode": "subagent",
      "model": "google/gemini-2.5-pro",
      "prompt": "{file:./agents/code-researcher.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": false,
        "bash": true,
        "patch": false,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true
      }
    },
    "Unit Tester": {
      "description": "Expert in writing comprehensive unit tests with high coverage, mocking, and testing best practices",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./agents/unit-tester.md}",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "patch": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true
      }
    },
    "Code Reviewer": {
      "description": "Provides thorough, constructive code reviews focusing on security, performance, maintainability, and best practices",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./agents/code-reviewer.md}",
      "tools": {
        "read": true,
        "write": false,
        "edit": false,
        "bash": true,
        "patch": false,
        "grep": true,
        "glob": true,
        "list": true,
        "todoread": true,
        "todowrite": true,
        "webfetch": true
      }
    }
  }
}
